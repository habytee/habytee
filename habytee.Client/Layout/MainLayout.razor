@inherits LayoutComponentBase

<RadzenLayout>
    <RadzenHeader>
        <div style="display: flex; align-items: center; justify-content: space-between; position: relative; padding-right: 10px;">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0">
                <RadzenSidebarToggle Click="@(() => ViewModel.SidebarExpanded = !ViewModel.SidebarExpanded)" />
                <RadzenLabel Text="habytee" />
                <RadzenLabel Text="@($"{ViewModel.Coins}&nbsp;")" style="margin-left: 15px;" />
                <span class="coin"></span>
            </RadzenStack>
            <RadzenMenu>
                <RadzenMenuItem Text="Profile" Icon="account_circle">
                    <RadzenMenuItem Text="Settings" Path="/settings" Icon="settings"></RadzenMenuItem>
                    <RadzenMenuItem Text="Logout" Path="https://app.habytee.com/oauth2/sign_out?rd=https%3A%2F%2Fhabytee.com" Icon="logout"></RadzenMenuItem>
                </RadzenMenuItem>
            </RadzenMenu>
        </div>
    </RadzenHeader>
    <RadzenSidebar @bind-Expanded="@ViewModel.SidebarExpanded">
        <RadzenPanelMenu>
            <RadzenPanelMenuItem Text="Home" Icon="home" Path="/" />
            <RadzenPanelMenuItem Text="Add habit" Icon="add_box" Path="/create" />
            <RadzenPanelMenuItem Text="Habits" Icon="psychiatry" Path="/habits" />
            <RadzenPanelMenuItem Text="Add shop item" Icon="add_shopping_cart" Path="/add-shop-item" />
            <RadzenPanelMenuItem Text="Shop" Icon="shopping_cart" Path="/shop" />
            <RadzenPanelMenuItem Text="Logout" Icon="logout" Path="https://app.habytee.com/oauth2/sign_out?rd=https%3A%2F%2Fhabytee.com" />
        </RadzenPanelMenu>
    </RadzenSidebar>
    <RadzenBody>
        <div class="rz-p-4">
            @Body
        </div>
    </RadzenBody>
    <RadzenFooter>
        &copy; 2025 habytee
    </RadzenFooter>
</RadzenLayout>

<HeadContent>
    <RadzenTheme Theme="material-dark" />
</HeadContent>

<RadzenComponents />